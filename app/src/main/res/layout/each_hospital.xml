<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30sp"
    app:cardCornerRadius="30sp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10sp">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">



        <TextView
            android:id="@+id/hospitalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:fontFamily="@font/sf_pro_rounded_heavy"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Yashoda Hospitals"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/pin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="start"
               android:text="ðŸ“"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="5dp"
               android:textColor="@color/black"/>
           <TextView
               android:id="@+id/hospitalAddress"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="start"
               android:layout_marginLeft="5dp"
               android:textSize="17sp"
               android:text=" Somajiguda, Hyderabad"
               android:textColor="@color/black"/>


       </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="ðŸ›£ï¸"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/hospitalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="17sp"
        android:text="2.5 kms"
        android:textColor="@color/black"/>
</LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:cardCornerRadius="12dp"
            android:layout_margin="20dp"
            app:cardElevation="10dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center">



                        <ImageView
                            android:id="@+id/scanImage"
                            android:layout_gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mrimachine"
                            android:scaleType="fitXY" />

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/scanName"
                        android:text="M.R.I Scan"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/sf_pro_text_medium"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/scanPrice"
                        android:text="â‚¹ 5000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sf_pro_text_medium"
                        android:textColor="@color/black"
                        />


                </LinearLayout>




            </androidx.appcompat.widget.LinearLayoutCompat>





        </com.google.android.material.card.MaterialCardView>


    </androidx.appcompat.widget.LinearLayoutCompat>








</androidx.cardview.widget.CardView>